generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id          Int          @id @default(autoincrement())
  firstName   String
  userName    String
  lastName    String
  email       String
  password    String
  phoneNumber String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  reservations Reservation[]
  reviews      Review[]
}

model Reservation {
  id           Int       @id @default(autoincrement())
  customerId   Int
  restaurantId Int
  date         DateTime
  time         DateTime  @db.Time(6)
  nbOfGuests   Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  customer     Customer   @relation(fields: [customerId], references: [id])
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

model Restaurant {
  id           Int          @id @default(autoincrement())
  name         String
  location     String
  cuisine      String
  phoneNumber  String
  capacity     Int
  averagePrice Float
  openingHour  DateTime     @db.Time(6)
  closingHour  DateTime     @db.Time(6)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime
  reservations Reservation[]
  reviews      Review[]
}

model Review {
  id           Int       @id @default(autoincrement())
  customerId   Int
  restaurantId Int
  review       String
  rating       Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime

  // Relations
  customer     Customer   @relation(fields: [customerId], references: [id])
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}
